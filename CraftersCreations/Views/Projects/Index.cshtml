
@model List<CraftersCreations.Models.Catagory>

<h1>Projects</h1>

<p><a asp-controller="Projects" asp-action="Add">Add a new project</a></p>

@if (Model.Count == 0)
{
    <p>No Projects are currently listed</p>
}
else
{
<div>
    <ul>
        @foreach (Catagory catagory in Model)
        {
            <li class=" text-dark list-group-item list-group-item-warning">
                @catagory.Name
                <ul>
                    @foreach (Projects projects in catagory.Projects)
                    {
                        <li>
                            @projects.Name
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>

</div>
}