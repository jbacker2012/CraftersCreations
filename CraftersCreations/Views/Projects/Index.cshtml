
@model List<CraftersCreations.Models.Projects>

<h1>Project Inventory</h1>

<p><a asp-controller="Projects" asp-action="Add">Add a new project</a></p>

@if (Model.Count == 0)
{
    <p>No Projects are currently listed</p>
}
else
{
    <div>
        <ul>
            @foreach (Projects projects in Model)
            {
                <li>
                    <a asp-controller="Projects" asp-action="About" asp-route-id="@projects.Id">@projects.Name</a>
                </li>
            }
        </ul>

    </div>
}