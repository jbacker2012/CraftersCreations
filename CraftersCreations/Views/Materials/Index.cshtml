
@model List<CraftersCreations.Models.CraftType>

<h1>Inventory</h1>

<p><a asp-controller="Materials" asp-action="Add">Add a new item</a></p>

@if (Model.Count == 0)
{
    <p>No Items are currently listed</p>
}
else
{
    <div>
        <ul class="list-group">
            @foreach (CraftType craftType in Model)
            {
                <li class=" text-dark list-group-item list-group-item-info">
                    @craftType.Name
                    <ul>
                        @foreach (Materials materials in craftType.Materials)
                    {
                        <li>
                            @materials.Name
                        </li>
                    }
                    </ul>
                </li>
               
             
            }
        </ul>

    </div>
}