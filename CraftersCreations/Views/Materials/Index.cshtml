
@model List<CraftersCreations.Models.Materials>

<h1>Material Inventory</h1>

<p><a asp-controller="Material" asp-action="Add">Add a new item</a></p>

@if (Model.Count == 0)
{
    <p>No Materials are currently listed</p>
}
else
{
    <div>
        <ul>
            @foreach (Materials materials in Model)
            {
                <li>
                    <a asp-controller="Materials" asp-action="About" asp-route-id="@materials.Id">@materials.Name</a>
                </li>
            }
        </ul>

    </div>
}