@model List<CraftersCreations.Models.User>

<h1>User Account</h1>

<p><a asp-controller="Account" asp-action="Add">Add a new User</a></p>

@if (Model.Count == 0)
{
    <p>No Users Listed</p>
}
else
{
    <div>
        <ul class="list-group">
            @foreach (User user in Model)
            {
                <li class=" text-dark list-group-item list-group-item-primary">
                    @user.Name, @user.Email
                </li>


            }
        </ul>

    </div>
}
