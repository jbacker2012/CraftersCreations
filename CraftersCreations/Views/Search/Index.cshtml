
<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@(column.Key == ViewBag.searchType)"/>
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" class="btn btn-secondary" role="button" />
    </form>

    <hr />

    @if (ViewBag.materials != null)
    {
        <table>
            @foreach (var materials in ViewBag.materials)
            {
                <tr>
                    <td>
                        <p class=" text-dark list-group-item list-group-item-info">Name: @materials.Name</p>
                        <p class=" text-dark list-group-item list-group-item-info">Craft Type: @materials.CraftType.Name</p>

                    </td>
                </tr>
            }
        </table>
    }

    @if (ViewBag.projects != null)
    {
        <table>
            @foreach (var projects in ViewBag.projects)
            {
                <tr>
                    <td>
                        <p class="text-dark list-group-item list-group-item-warning">Name: @projects.Name</p>
                        <p class="text-dark list-group-item list-group-item-warning">Catagory: @projects.Catagory.Name</p>

                    </td>
                </tr>
            }
        </table>
    }


</div>